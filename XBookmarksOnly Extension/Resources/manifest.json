{
  "manifest_version": 3,
  "name": "XMarks",
  "version": "1.1",
  "description": "Restricts X.com to bookmarks and your profile during focus hours",
  "permissions": [
    "activeTab",
    "scripting",
    "webNavigation",
    "storage"
  ],
  "host_permissions": [
    "*://x.com/*",
    "*://twitter.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://x.com/*", "*://twitter.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "48": "images/icon-48.png",
    "96": "images/icon-96.png",
    "128": "images/icon-128.png"
  }
}
