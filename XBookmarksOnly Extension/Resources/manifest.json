{
  "manifest_version": 3,
  "name": "X Bookmarks Only",
  "version": "1.0",
  "description": "Restricts X.com to only bookmarks during focus hours",
  "permissions": [
    "activeTab",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": [
    "*://x.com/*",
    "*://twitter.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://x.com/*", "*://twitter.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "48": "images/icon-48.png",
    "96": "images/icon-96.png",
    "128": "images/icon-128.png"
  }
}
